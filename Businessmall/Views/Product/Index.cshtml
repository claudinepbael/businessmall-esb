@model Businessmall.ViewModels.Products.ListProductsViewModel

@{
    ViewBag.Title = "Index";
}

@Html.Partial("AddProduct", new Businessmall.ViewModels.Products.AddOrUpdateProductViewModel())

<h2>All Products</h2>
<table class="table" id="products-list-table">
    @if (Model.Products.Count <= 0) { 
            <tr> No products available</tr>
    }else{
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Initial Quantity</th>
                <th>Purchased Quantity</th>
            </tr>
        </thead>
    }
    @foreach (var product in Model.Products) { 
        <tr>
            <td>@product.name</td>
            <td>@product.price</td>
            <td>@product.initial_qty</td>
            <td>@product.purchased_qty</td>
            <td>
                <a href="@Url.Action("Update", "Product", new {id = product.id })">
                   Update
                </a>
            </td>
        </tr>
    }
</table>
